<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="280dp"
    android:padding="20dp"
    android:background="@drawable/tipka"
    android:backgroundTint="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/korisnik_popup_slika"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/korisnik_popup_ime"
        android:fontFamily="@font/raleway_bold"
        app:layout_constraintTop_toBottomOf="@+id/korisnik_popup_slika"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:text="Test TestiÄ‡"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/dodaj_prijatelja"
        android:fontFamily="@font/raleway_bold"
        android:background="@drawable/tipka"
        android:textColor="@color/white"
        android:text="@string/dodaj_prijatelja"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/korisnik_popup_ime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/odustani_prijatelj"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/odustani_prijatelj"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/white"
        android:background="@drawable/tipka"
        android:text="@string/odustani_prijatelj"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/korisnik_popup_ime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dodaj_prijatelja"/>


</androidx.constraintlayout.widget.ConstraintLayout>