<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content_controls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_horizontal"
    android:background="@color/white"
    android:orientation="horizontal"
    android:backgroundTint="@color/colorPrimaryDark"
    tools:ignore="UselessParent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Točni odgovori: 0/0"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_medium"
        android:id="@+id/broj_tocnih_odgovora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bodovi: 0.0"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/white"
        android:id="@+id/bodovi_trenutni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/pitanje"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/dumy_question"
        android:fontFamily="@font/raleway_bold"
        android:textSize="55px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:layout_editor_absoluteX="108dp"
        android:gravity="center" />

    <Button
        android:id="@+id/pitanje_odgovor_a"
        android:textColor="@color/white"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:fontFamily="@font/raleway_bold"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pitanje_odgovor_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitanje" />
    <Button
        android:id="@+id/pitanje_odgovor_b"
        android:textColor="@color/white"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pitanje_odgovor_a"
        app:layout_constraintTop_toBottomOf="@+id/pitanje" />

    <Button
        android:id="@+id/pitanje_odgovor_c"
        android:textColor="@color/white"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:fontFamily="@font/raleway_bold"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pitanje_odgovor_d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pitanje_odgovor_a"
        app:layout_constraintVertical_bias="0.25" />
    <Button
        android:id="@+id/pitanje_odgovor_d"
        android:textColor="@color/white"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:fontFamily="@font/raleway_bold"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pitanje_odgovor_c"
        app:layout_constraintTop_toBottomOf="@+id/pitanje_odgovor_b"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>