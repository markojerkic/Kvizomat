<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/slika_korisnik_list"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ime_korisnika_list"
        android:text="test"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/slika_korisnik_list"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_korisnika_list"
        android:text="test"
        app:layout_constraintTop_toBottomOf="@+id/ime_korisnika_list"
        app:layout_constraintStart_toEndOf="@+id/slika_korisnik_list"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>