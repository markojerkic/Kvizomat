<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/slika_korisnik_list"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ime_korisnika_list"
        android:text="test"
        android:fontFamily="@font/raleway_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email_korisnika_list"
        app:layout_constraintStart_toEndOf="@+id/slika_korisnik_list"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_korisnika_list"
        android:text="test"
        android:fontFamily="@font/raleway_medium"
        app:layout_constraintTop_toBottomOf="@+id/ime_korisnika_list"
        app:layout_constraintBottom_toTopOf="@id/prijatelj_ili_ne"
        app:layout_constraintStart_toEndOf="@+id/slika_korisnik_list"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_korisnika_list"
        app:layout_constraintStart_toEndOf="@id/slika_korisnik_list"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/prijatelj_ili_ne"
        android:textColor="@color/white"
        android:text="MeÄ‘u prijateljima"/>

</androidx.constraintlayout.widget.ConstraintLayout>