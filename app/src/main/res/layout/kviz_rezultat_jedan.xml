<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="pitanje"
        android:id="@+id/rezultat_pitanje"
        android:textSize="20dp"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rezultat_pitanje"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:text="Točan odgovor:"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/raleway_medium"
        android:id="@+id/tocan_odgovor_rezultat_naslov"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tocan_odgovor_rezultat_naslov"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tocan_odgovor_rezultat_naslov"
        android:layout_marginTop="15dp"
        android:text="tvoj odgovor"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/raleway_bold"
        android:id="@+id/tocan_odgovor_rezultat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rezultat_pitanje"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="Vi ste odgovorili:"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/raleway_medium"
        android:id="@+id/rezultat_tocno_boolean_naslov"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rezultat_tocno_boolean_naslov"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/rezultat_tocno_boolean_naslov"
        android:layout_marginTop="15dp"
        android:text="tocno"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/raleway_bold"
        android:id="@+id/rezultat_tocno_boolean"/>

</androidx.constraintlayout.widget.ConstraintLayout>